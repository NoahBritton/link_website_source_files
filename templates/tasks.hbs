<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
  <meta name="description" content="task page">
  <meta name="author" content="Noah Britton">
  {{> head}}
  <link href="css/tasks.css" rel="stylesheet" type="text/css">
  <script defer src="js/tasks.js"></script>
  <script defer src="js/dragDiv.js"></script>
  <title>Tasks</title>
</head>

<body onload="initialLoad()">
  {{> header}}
  <main role="main" class="container">
    <button style="background-color:rgb(47, 223, 71)" type="button" id="newTask">New Task</button>
    <button style="background-color:rgb(47, 188, 223)" type="button" id="nextTask">Load Next</button>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDrag">
      <label class="form-check-label" for="flexCheckDefault">
        Draggable Tasks (buggy)
      </label>
    </div>
    <div id="taskArea"></div>
  </main>
  {{> footer}}
  {{> cardTemplate}}
</body>

</html>